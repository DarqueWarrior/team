<?xml version="1.0" encoding="utf-8" ?>
<Configuration>
   <ViewDefinitions>
      <!--Team.AccessControlList.TableView-->
      <View>
         <Name>Team.AccessControlList.TableView</Name>
         <ViewSelectedBy>
            <TypeName>Team.AccessControlList</TypeName>
         </ViewSelectedBy>
         <TableControl>
            <TableHeaders>
               <TableColumnHeader>
                  <Label>Token</Label>
               </TableColumnHeader>
               <TableColumnHeader>
                  <Label>InheritPermissions</Label>
               </TableColumnHeader>       
               <TableColumnHeader>
                  <Label>Access Control Entries</Label>
               </TableColumnHeader>            
            </TableHeaders>
            <TableRowEntries>
               <TableRowEntry>
                  <TableColumnItems>
                     <TableColumnItem>
                        <PropertyName>Token</PropertyName>
                     </TableColumnItem>
                     <TableColumnItem>
                        <PropertyName>InheritPermissions</PropertyName>
                     </TableColumnItem>  
                     <TableColumnItem>
                        <Alignment>Left</Alignment>
                        <ScriptBlock>$_.Aces | % { $_.ToString() }</ScriptBlock> 
                     </TableColumnItem>  
                  </TableColumnItems>
               </TableRowEntry>
            </TableRowEntries>
         </TableControl>
      </View>
      <!--Team.AccessControlList.ListView-->
      <View>
         <Name>Team.AccessControlList.ListView</Name>
         <ViewSelectedBy>
            <TypeName>Team.AccessControlList</TypeName>
         </ViewSelectedBy>
         <ListControl>
            <ListEntries>
               <ListEntry>
                  <ListItems>
                     <ListItem>
                        <PropertyName>Token</PropertyName>
                     </ListItem>
                     <ListItem>
                        <PropertyName>InheritPermissions</PropertyName>
                     </ListItem>
                     <ListItem>
                        <PropertyName>Aces</PropertyName>
                     </ListItem>
                  </ListItems>
               </ListEntry>
            </ListEntries>
         </ListControl>
      </View>
   </ViewDefinitions>
</Configuration>